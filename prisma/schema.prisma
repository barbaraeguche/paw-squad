generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  name        String
  email       String        @unique
  password    String
  rehomedPets RehomedPets[]
  adoptedPets AdoptedPets[]
}

model PetRecord {
  id            String          @id @default(uuid())
  name          String
  type          Type
  breed         String
  gender        Gender
  age           String
  compatibility Compatibility[]
  image         String
  comments      String
  rehomedPets   RehomedPets[]
  adoptedPets   AdoptedPets[]
}

model RehomedPets {
  id     Int    @id @default(autoincrement())
  petId  String
  userId String

  pet  PetRecord @relation(fields: [petId], references: [id])
  user User      @relation(fields: [userId], references: [id])
}

model AdoptedPets {
  id     Int    @id @default(autoincrement())
  petId  String
  userId String

  pet  PetRecord @relation(fields: [petId], references: [id])
  user User      @relation(fields: [userId], references: [id])
}

enum Type {
  cat
  dog
}

enum Gender {
  male
  female
}

enum Compatibility {
  dogs
  cats
  small_kids
}
