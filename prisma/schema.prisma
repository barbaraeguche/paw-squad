generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String    @id @default(uuid())
  name        String
  // email       String    @unique
  password    String
  rehomeCount Int       @default(0)
  adoptCount  Int       @default(0)
  adopted     Adopted[]
  rehomed     Rehomed[]
}

model Pet {
  id            String          @id @default(uuid())
  name          String
  type          Type
  breed         String
  gender        Gender
  age           String
  compatibility Compatibility[]
  image         String
  comments      String
  adopted       Adopted?
  rehomed       Rehomed?
}

model Rehomed {
  id     Int    @id @default(autoincrement())
  petId  String @unique
  userId String
  pet    Pet    @relation(fields: [petId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Adopted {
  id     Int    @id @default(autoincrement())
  petId  String @unique
  userId String
  pet    Pet    @relation(fields: [petId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Type {
  cat
  dog
}

enum Gender {
  male
  female
}

enum Compatibility {
  dogs
  cats
  kids
}
