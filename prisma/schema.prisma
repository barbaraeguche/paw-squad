generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String?
  email    String    @unique
  password String?
  rehomed  Rehomed[]
  adopted  Adopted[]
}

model Pet {
  id            String          @id @default(uuid())
  name          String
  type          Type
  breed         String
  gender        Gender
  age           String
  compatibility Compatibility[]
  image         String
  comments      String
  rehomed       Rehomed?
  adopted       Adopted?
}

model Rehomed {
  id     Int    @id @default(autoincrement())
  petId  String @unique
  userId String

  pet  Pet  @relation(fields: [petId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: NoAction)
}

model Adopted {
  id     Int    @id @default(autoincrement())
  petId  String @unique
  userId String

  pet  Pet  @relation(fields: [petId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: NoAction)
}

enum Type {
  cat
  dog
}

enum Gender {
  male
  female
}

enum Compatibility {
  dogs
  cats
  kids
}
